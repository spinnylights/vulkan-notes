md_f='vulkan_notes.md'
header_f='header.html'
body_f='body.html'
footer_f='footer.html'
html_f='vknotes.html'

build="markdown -f fencedcode -o $body_f $md_f && cat $header_f $body_f $footer_f > $html_f"
eval "$build"
gvim "$md_f"
firefox "$html_f" &
do_on_save "$md_f" "$build"
